<h1>Welcome {{user.name}}</h1>
<h4>Your Stories</h4>
{{#if stories}}
<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/show/{{id}}"> {{title}}</a></td>
            <td>{{formatDate date 'MMMM do YYYY'}}
            </td>
            <td><span class='dash-status'>{{status}}</span></td>
            <td><a href="/stories/edit/{{id}}" class="btn left-align"><i class="fa fa-pencil" aria-hidden="true"></i>
                    Edit</a></td>
            <td>
                <form action="/stories/{{id}}?_method=DELETE" method="post" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn red"><i class="fa fa-remove"></i>Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any stories yet.</p>
{{/if}}