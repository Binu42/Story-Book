<h2 class="center-align">Welcome {{user.name}}</h2>
<h4 class="center-align">Your Stories</h4>
{{#if stories}}
<div class="row">
    {{#each stories}}
    <div class="col m6 s12 l4">
        <div class="card">
            <div class="card-title center-align">
                <p class="user-story--title"><a href="/stories/show/{{id}}"> {{truncate name 50}}</a></p>
            </div>
            <div class="card-content center-align">
                <span>comment allowance:- {{allowComments}}</span><br>
                <span class='dash-status'>Status:- {{status}}</span><br>
                <small>{{formatDate date 'MMMM do YYYY'}}</small>
            </div>
            <div class="card-action center-align">
                <a href="/stories/edit/{{id}}" class="btn left-align"><i class="fa fa-pencil" aria-hidden="true"></i>
                    Edit</a>
                <form action="/stories/{{id}}?_method=DELETE" method="post" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn red"><i class="fa fa-remove"></i>Delete</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<p class="center">You have not created any stories yet.</p>
{{/if}}