<div class="row">
    <div class="col s12 m8">
        <h3 class="center">{{name}}</h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY'}}</span>
                <h5>{{{body}}}</h5>
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{user.name}}</span>
                <img src="{{user.image}}" class="circle responsive-img" alt="">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{user.id}}">More from 
                {{user.name}}</a>
            </div>
        </div>
    </div>
</div>